@import "/colorui/main.wxss";
@import "/colorui/icon.wxss";

.page {
  background-color: #e4f9f5;
  padding-bottom: 50rpx;
}

.chunk {
  border: 2rpx solid rgb(241, 241, 241);
  margin: 20rpx auto 40rpx;
  width: 92%;
  background: #fff;
  box-shadow: 15rpx 20rpx 20rpx #ccc;
  border-radius: 30rpx;
  overflow: hidden;
}

.orgDec {
  text-align: center;
  flex-direction: row;
  font-weight: bold;
  font-size: 34rpx;
  letter-spacing: 1px;
  font-family: "Microsoft Yahei";
}

/* 地图样式 */
.map-control-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  box-sizing: border-box;
  background: #F8F8F7;
  width: 100%;
  height: 100%;
}

.map-control-content {
  background: #FFF;
  padding: 20px 0 0;
  margin-top: 10px;
}

.map {
  width: 100%;
  height: 300rpx;
}

.feature-switch {
  line-height: 51px;
}

/* info信息 */
.info {
  width: 100%;
  padding-bottom: 40rpx;
  font-size: 30rpx;
  box-sizing: border-box;
}

.border {
  padding-bottom: 30rpx;
  border-bottom: 2rpx solid #ccc;
}

.flex {
  /* padding-top: 30rpx; */
  display: flex;
  height: 80rpx;
  margin: 0rpx 20rpx;
  align-items: center;
  justify-content: space-between;
}

.pro {
  padding-top: 30rpx;
}

.p-top {
  padding: 5rpx 30rpx;
  line-height: 50rpx;
  color: #666;
  font-size: 30rpx;
  font-weight: 300;
  letter-spacing: 2px;
  font-family: "Microsoft Yahei";
  margin: 20rpx 0 0 0;
  text-indent: 2em;
  overflow: hidden;
  text-overflow: ellipsis;
  word-wrap: break-word;
  white-space: normal !important;
  text-align: justify;
}

.image {
  width: 100%;
  height: 400rpx;
  background-size: 100% 100%;
  background-repeat: no-repeat;
}

.image-top {
  padding-top: 15rpx;
}