@import "/colorui/main.wxss";
@import "/colorui/icon.wxss";

.page {
  margin-bottom: 100rpx;
}

/* 导航栏 */
.nav .cu-item {
  height: 60rpx;
  display: inline-block;
  line-height: 60rpx;
  margin: 0 10rpx;
  padding: 0 20rpx;
}

/* 内容 */
.eco-nav {
  width: 100%;
  background-color: #fff;
  padding: 30rpx;
  margin-bottom: 20rpx;
  font-size: 32rpx;

}

.head {
  display: flex;
  position: relative;
}

.eco-office {
  position: absolute;
  right: 0;
  top: 8rpx;
  font-size: 26rpx;
  height: 45rpx;
  line-height: 45rpx;
  padding: 0 10rpx;
  color: orangered;
  border: 2rpx solid orangered;
  border-radius: 7rpx;
}

.eco-name {

  width: 100%;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.eco-headImg {
  width: 110rpx;
  height: 110rpx;
  border-radius: 50%;
  border: 2rpx solid #ccc;
}

.eco-info {
  margin-left: 23rpx;
  margin-top: 6rpx;
  color: rgb(100, 117, 194);
  font-size: 38rpx;
}

.eco-time {
  margin-top: 13rpx;
  font-size: 30rpx;
}

.eco-desc {
  margin: 30rpx 0;
  letter-spacing: 4rpx;
  text-indent: 2em;
}

.eco-imgContent {
  display: flex;
  flex-wrap: wrap;
  max-width: 700rpx;
}

.eco-oneImg {
  background-size: 100% 100%;
  background-repeat: no-repeat;
}

.eco-moreImg {
  width: 31%;
  margin-right: 10rpx;
  margin-bottom: 10rpx;
  height: 226rpx;
}

.eco-fourImg {
  width: 50%;
  height: 300rpx;
}

.eco-more {
  padding: 30rpx 0 10rpx 0;
  border-bottom: 2rpx solid #ddd;
  display: flex;
  justify-content: space-between;
}

.read {
  font-size: 30rpx;
  margin-top: 5rpx;
}

.eco-text {
  margin-left: 30rpx;
}

.eco-call {
  display: flex;
  margin-top: 20rpx;
  align-items: center;
}

.cuIcon-likefill {
  margin: 0 15rpx;
}

.margin-left {
  margin-left: 18rpx;
  box-shadow: 4rpx 4rpx #ccc;
}

/* 回到顶部 */
.goTop {
  width: 100rpx;
  height: 100rpx;
  text-align: center;
  line-height: 100rpx;
  border-radius: 50%;
  position: fixed;
  bottom: 150rpx;
  right: 50rpx;
  background-color: rgb(93, 108, 243);
  box-shadow: 0rpx 0rpx 20rpx #fff;
  font-size: 60rpx;
}