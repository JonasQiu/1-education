@import "/colorui/main.wxss";
@import "/colorui/icon.wxss";

/* 地图样式 */
.map-control-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  box-sizing: border-box;
  background: #F8F8F7;
  width: 100%;
  height: 100%;
}

.map-control-content {
  background: #FFF;
  padding: 20px 0 0;
  margin-top: 10px;
}

.map {
  width: 100%;
  height: 300rpx;
}

.feature-switch {
  line-height: 51px;
}

/* info信息 */
.info{
  width: 100%;
  background-color: #fff;
  padding-bottom: 40rpx;
  font-size: 30rpx;
  box-sizing: border-box;
}
.border{
  padding-bottom: 30rpx;
  border-bottom: 2rpx solid #ccc;
}
.flex{
  padding-top: 30rpx;
  display: flex;
  height: 70rpx;
  align-items: center;
  justify-content: space-between;
}
.pro{
  padding-top: 30rpx;
}
.p-top{
  padding-top: 15rpx;
  text-indent: 2em;
  line-height: 50rpx;
}
.image{
  width: 100%;
  height: 400rpx;
  background-size: 100% 100%;
  background-repeat: no-repeat;
}
.image-top{
  padding-top: 15rpx;
}
.tabbar{
  width: 100%;
  position: fixed;
  display: flex;
  bottom: 0;
  height: 80rpx;
  background-color: #fff;
  justify-content: space-around;
  align-items: center;
}