@import "/colorui/main.wxss";
@import "/colorui/icon.wxss";
/* 无搜索内容时的展示 */
.noContent{
  color: #000;
  margin: 0 20rpx;
  margin-top: 25rpx;
  font-size: 28rpx;
}
/* 热搜 */
.hot{
  width: 100%;
  margin-bottom: 20rpx;
}
.search-title{
  font-size: 32rpx;
  font-weight: 600;
}
.hotContent{
  padding-top: 15rpx;
  display: flex;
  flex-wrap: wrap;
}
.hotItem{
  width: 50%;
  margin: 10rpx 0;
}
.color999{
  color: #999;
}
.margin-15{
  margin-left: 15rpx;
}
.hotText::after{
  content: '热';
  width: 15rpx;
  height: 15rpx;
  font-size: 20rpx;
  color: #fff;
  padding: 5rpx;
  margin-left: 10rpx;
  line-height: 15rpx;
  background-color: rgb(247, 182, 61);
}
.newText::after{
  content: '新';
  width: 15rpx;
  height: 15rpx;
  font-size: 20rpx;
  color: #fff;
  padding: 5rpx;
  margin-left: 10rpx;
  line-height: 15rpx;
  background-color: rgb(247, 52, 159);
}
/* 搜索历史 */
.history{
  width: 100%;
  margin-bottom: 40rpx;
}
.padding-top{
  padding-top: 15rpx;
  display: flex;
  flex-wrap: wrap;
}
.historyContent{
  padding: 10rpx 15rpx;
  margin-right: 10px;
  background-color: #ddd;
  border-radius: 6rpx;
}
/* 清除搜索历史 */
.clearHistory{
  color: #aaa;
  margin: 0 auto;
  width: 220rpx;
}