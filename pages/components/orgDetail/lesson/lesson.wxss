.lesson {
  display: flex;
  background-color: #ffffff;
  color: #000;
  padding: 20rpx 20rpx;
  border-bottom: 2rpx solid #ddd;
}

.imageInfo {
  position: relative;
}

.image {
  width: 300rpx;
  height: 180rpx;
}

.apply_num {
  position: absolute;
  bottom: 20rpx;
  left: 20rpx;
  color: #fff;
}

.info {
  padding-left: 20rpx;
  position: relative;
  width: 400rpx;
  text-align: justify;
  overflow: hidden;
  font-size: 32rpx;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 3
}

.price {
  padding-top: 20rpx;
  color: orangered;
}

.line {
  font-size: 28rpx;
  color: orangered;
  position: absolute;
  right: 30rpx;
  bottom: 7rpx;
  padding: 7rpx 25rpx;
  border: 2rpx solid orangered;
  border-radius: 7rpx;
}