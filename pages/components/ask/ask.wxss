@import "/colorui/main.wxss";
@import "/colorui/icon.wxss";

.page {
  margin-bottom: 100rpx;
}

/* <!-- 回复我的、@我、系统通知、收到的赞 --> */
.ask {
  width: 100%;
  height: 140rpx;
  display: flex;
  flex: 1;
  color: #777;
  font-size: 28rpx;
  background-color: #fff;
}

.msg {
  text-align: center;
  width: 25%;
  padding: 15rpx 0;
}

.msg .view {
  padding-top: 10rpx;
}

.ask-style {
  color: rgb(28, 187, 180);
}

.icon-book {
  color: rgb(243, 196, 8);
}

.icon-praise {
  color: rgb(247, 55, 199);
}

.icon-sys {
  color: rgb(55, 177, 247);
}

.cu-bar {
  border-bottom: 2rpx solid #ccc;
}

