		<view class="flex border" bindtap="callPhone" data-phoneNum="{{infoList.info.phone}}" style="padding-top: 30rpx;">
			<view><text class="cuIcon-phone"></text> {{infoList.info.phone}} </view>
			<view><text class="cuIcon-right"></text></view>
		</view>
	</view> -->
</view>