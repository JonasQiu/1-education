/* 返回上一步 */
.return {
  z-index: 9999;
  position: fixed;
  top: 60rpx;
  left: 25rpx;
  font-size: 45rpx;
}

/* 页面 */
.page {
  background-color: #e4f9f5;
  margin-bottom: 100rpx;
}

/* 块 */
.relative {
  position: relative;
}

.absolute {
  position: absolute;
  top: -103rpx;
  width: 100%;
}

.chunk {
  border: 2rpx solid rgb(241, 241, 241);
  margin: 20rpx auto 40rpx;
  width: 92%;
  background: #fff;
  box-shadow: 15rpx 20rpx 20rpx #ccc;
  border-radius: 30rpx;
}

/* 头部 */
.eco-head {
  padding: 30rpx;
  display: flex;
  border-radius: 90rpx;
}

.avatar {
  border-radius: 50%;
  width: 100rpx;
  height: 100rpx;
  box-shadow: 10rpx 10rpx 30rpx #ccc;
}

.eco-nameInfo {
  margin-left: 15rpx;
  margin-top: 7rpx;
}

.eco-name {
  font-size: 33rpx;
  font-weight: bold;
  margin: 0 0 0 10rpx;
}

.first-change-time {
  font-size: 24rpx;
  font-weight: 300;
  letter-spacing: 1px;
  margin: 20rpx 0 0 10rpx;
}

/* 描述 */
.chInfo {
  margin-top: -10rpx;
  border-radius: 25rpx;
  padding: 10rpx;
}

.eco-info {
  margin-top: 30rpx;
  margin-left: 20rpx;
  margin-right: 40rpx;
  text-align: justify;
}

.eco-title {
  text-align: center;
  margin: 40rpx 0 30rpx 0;
  flex-direction: row;
  font-weight: bold;
  font-size: 40rpx;
  letter-spacing: 1px;
  font-family: "Microsoft Yahei";
}

.line {
  width: 100%;
  height: 1px;
  vertical-align: middle;
  background-color: #e5e5e5;
}

.eco-content {
  font-size: 30rpx;
  font-weight: 200;
  letter-spacing: 2px;
  font-family: "Microsoft Yahei";
  color: #666;
  margin: 50rpx 10rpx 40rpx 10rpx;
}

.last-change-time {
  text-align: end;
  margin-top: 20rpx;
  margin-bottom: 20rpx;
  color: #666;
  font-size: 25rpx;
  font-weight: 100;
  letter-spacing: 2px;
  font-family: "Microsoft Yahei";
}


.active {
  margin-right: 40rpx;
  height: 90rpx;
  line-height: 90rpx;
  font-size: 50rpx;
  text-align: end;
}

.m-20 {
  margin-left: 20rpx;
}

/* 机构介绍 */
.org {
  display: flex;
}

.padding-20 {
  padding: 20rpx;
}

.info {
  width: 500rpx;
  margin: 0 0 0 20rpx;
  font-size: 26rpx;
  font-family: "Microsoft Yahei";
}

.eco-orgHeadImg {
  border: 2rpx solid #ccc;
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
}

.eco-orgName {
  font-weight: bold;
  font-size: 30rpx;
  letter-spacing: 1px;
}

.eco-address {
  color: #ccc;
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  word-wrap: break-word;
  white-space: normal !important;
  font-weight: 500;
  letter-spacing: 2px;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
}

.m-b-10 {
  margin-bottom: 4rpx;
}

/* 底部导航 */
.tabbar {
  width: 100%;
  position: fixed;
  display: flex;
  bottom: 0;
  height: 80rpx;
  background-color: #fff;
  justify-content: space-around;
  align-items: center;
  text-align: center;
  box-shadow: 0 -4rpx 4rpx #ddd;
  font-size: 47rpx;
}

.w-50 {
  width: 50%;
}