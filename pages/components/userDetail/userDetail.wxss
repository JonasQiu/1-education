@import "/colorui/icon.wxss";

.box {
  background-color: #fff;
  width: 600rpx;
  position: fixed;
  left: calc(50% - 300rpx);
  top: 50%;
  transform: translateY(-50%);
  text-align: center;
}

.info {
  height: 200rpx;
  width: 100%;
  display: flex;
  border-bottom: 2rpx solid #ddd;
}

.sex {
  width: 200rpx;
  height: 100%;
  margin-top: 50rpx;
  font-size: 50rpx !important;
}

.avatar {
  width: 200rpx;
  height: 200rpx;
}

.avatar-img {
  width: 200rpx;
  height: 200rpx;
  margin-top: -100rpx;
  border-radius: 50%;
  overflow: hidden;
  box-shadow: 5rpx 5rpx 10rpx #ccc;
}

.name {
  height: 100rpx;
  line-height: 100rpx;
  font-size: 34rpx;
  font-weight: 700;
}

.user-type {
  width: 200rpx;
  height: 100%;
}

.name-border {
  margin-top: 50rpx;
  padding: 10rpx 0rpx;
  border: 2rpx solid rgb(250, 171, 24);
  color: rgb(250, 171, 24);
}

.num {
  display: flex;
  text-align: center;
  font-size: 30rpx;
  height: 150rpx;
}

.atten {
  flex: 1;
  align-items: center;
  color: red;
}

.fun {
  flex: 1;
  align-items: center;
  color: black;
}

.acti {
  flex: 1;
  align-items: center;
  color: orange;
}